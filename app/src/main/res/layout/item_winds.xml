<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="#4f313131">

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:text="风向 气压"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/chahua"
            android:layout_above="@+id/textView5"

            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/wind"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#e6e5e5"
            android:id="@+id/textView5" />


        <RelativeLayout
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wind"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp">

            <com.sparklyys.yweather.WindPath
                android:id="@+id/id_wind"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <com.sparklyys.yweather.PillarView
                android:id="@+id/view2"
                android:layout_width="60dp"
                android:layout_height="80dp" />

            <com.sparklyys.yweather.PillarView
                android:id="@+id/view"
                android:layout_width="40dp"

                android:layout_height="60dp"
                android:layout_alignBottom="@+id/view2"
                android:layout_toEndOf="@+id/id_wind" />

            <com.sparklyys.yweather.WindPath
                android:id="@+id/id_windsmall"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_alignStart="@+id/view"
                android:layout_alignTop="@+id/view" />

        </RelativeLayout>


        <TextView
            android:id="@+id/winds"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/img_line"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/imageView5"
            android:drawableLeft="@mipmap/feng"
            android:gravity="center"
            android:text=" 西风4级°"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_line10"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/qi"
            android:gravity="center"
            android:text="1004"
            android:textColor="@color/colorWhite"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/winds"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="#e6e5e5" />

        <TextView
            android:id="@+id/img_line"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView5"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="16dp"
            android:background="#878787" />

        <TextView
            android:id="@+id/img_line3"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:background="#878787" />

        <TextView
            android:id="@+id/img_line4"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line3"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:background="#878787" />

        <TextView
            android:id="@+id/img_line5"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line4"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line6"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line5"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line7"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line6"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line8"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line7"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line9"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line8"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line10"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line9"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line11"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line10"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line12"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line11"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:id="@+id/img_line13"
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line12"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />

        <TextView
            android:layout_width="7dp"
            android:layout_height="1.5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_line13"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"

            android:background="#878787" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:background="#4f313131">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="@mipmap/chahua"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@+id/tem"
            android:layout_alignEnd="@+id/textView3" />
        <TextView
            android:id="@+id/tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:text="体感 能见度"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/tem"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#e6e5e5" />

        <TextView
            android:id="@+id/feels_like"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tab_layout"
            android:layout_below="@id/tem"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/wen"
            android:gravity="center"
            android:text="28°"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_below="@id/tem"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/feels_like"
            android:background="#e6e5e5" />

        <TextView
            android:id="@+id/visibility"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/neng"
            android:gravity="center"
            android:text="13.6"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</LinearLayout>