<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="#4f313131"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/ic_lifeindex_sport"
            android:layout_alignTop="@+id/car"
            android:layout_alignStart="@+id/carwashing1" />

        <TextView
            android:id="@+id/car"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginStart="93dp"
            android:layout_marginTop="14dp"
            android:text="运动指数"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/img_line"
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/car"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#cccbcb" />

        <TextView
            android:id="@+id/carwashing"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_line"
            android:layout_below="@id/img_line"
            android:layout_marginTop="5dp"
            android:text="适宜"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/img_line2"
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/carwashing"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="#cccbcb" />

        <TextView
            android:id="@+id/carwashing1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_line2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="适合"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/img_line3"
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_below="@id/carwashing1"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="#cccbcb" />

    </RelativeLayout>

</LinearLayout>